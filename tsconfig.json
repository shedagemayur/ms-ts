{
    "compilerOptions": {
        "types": [
            "node"
        ],
        "target": "ES6",
        "lib": [
            "es2017",
            "esnext.asynciterable"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "./dist",
        "allowJs": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/*"
    ],
    "exclude": [
        "node_modules",
        "tests"
    ]
}